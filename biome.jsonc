{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite/biome/core"],
  "files": {
    "includes": [
      "**/*.{ts,tsx,js,jsx,json,jsonc,md,toml}",
      "!!**/node_modules",
      "!!**/dist",
      "!!**/tmp",
      "!!**/evals/fixtures",
      "!!**/evals/harbor",
      "!!**/src/web/components/ui",
      "!!**/src/web/components/ai-elements",
      "!!**/src/serve/public/components/ui",
      "!!**/src/serve/public/components/ai-elements",
      "!!**/website"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    },
    "globals": ["Bun"]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "formatWithErrors": true
  },
  "linter": {
    "rules": {
      "correctness": {
        // Mark as unsafe fix - prevents race condition with Claude Code PostToolUse hook
        // (ultracite fix runs after Edit, would remove imports before usage added)
        // Can still clean up with: ultracite fix --unsafe true
        "noUnusedImports": { "level": "error", "fix": "unsafe" }
      },
      "suspicious": {
        "noExplicitAny": "warn"
      },
      "style": {
        "noNonNullAssertion": "warn",
        "noMagicNumbers": "off"
      },
      "performance": {
        "noBarrelFile": "off",
        "noNamespaceImport": "warn"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": {
          "level": "warn",
          "options": { "maxAllowedComplexity": 20 }
        }
      }
    }
  },
  "overrides": [
    {
      "includes": ["src/store/sqlite/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "useAwait": "off"
          }
        }
      }
    },
    {
      "includes": ["**/pages/*.tsx"],
      "linter": {
        "rules": {
          "style": {
            "useFilenamingConvention": "off"
          }
        }
      }
    }
  ]
}
